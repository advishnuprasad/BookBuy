<div id='left-nav' style="width:100%">
  <span><%= link_to "IBT Requests", pull_procurements_path(:pull => 'ibtr') %></span> | 
  <span><%= link_to "New Arrivals", pull_procurements_path(:pull => 'nent') %></span>
</div>
