<%= form_for @publisher do |f| %>
  <p>
    Code: <%= f.text_field :code %>
  </p>
  <p>
    Name: <%= f.text_field :name %>
  </p>
  <% for supplier in @publisher.supplierdiscounts %>
    <%= f.fields_for "...", supplier do |supplier_form| -%>
      <p>
        Supplier: <%= supplier_form.select_tag "supplier_id", options_from_collection_for_select(Supplier.all, :id, :name), {:include_blank => true } %>
        Discount: <%= supplier_form.text_field :discount, :size => 5 %>%
      </p>
    <% end -%>
  <% end %>
  <p>
    <%= f.submit "Save" %>
    <%= f.submit "Cancel" %>
  </p>
<% end %>
