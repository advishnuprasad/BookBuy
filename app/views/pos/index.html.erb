<div>Purchase Orders</div>
<div>
  <% if @pos %>
    <%= will_paginate :prev_label => '<< Previous', :next_label => 'Next >>', :class => 'pagination'%>
      <% @pos.each do |po| %>
        <div class="ui-widget-content ui-corner-all list-item-row">
          <table style="width: 100%;">
            <tr>
              <td style="width: 20%;"><%= link_to po.code, edit_po_path(po.id) %></td>            
              <td style="width: 20%;"><%= po.supplier.name %></td>
              <td style="width: 20%;"><%= po.branch_id %></td>
              <td style="width: 10%;"><%= po.status %></td>
              <td style="width: 10%;"><%= po.created_at.strftime('%d-%b-%Y') %></td>
            </tr>
          </table>
        </div>
      <% end %>
    <%= will_paginate %>
  <% end %>
</div>

