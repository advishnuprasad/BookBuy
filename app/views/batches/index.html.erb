<h1>Listing batches</h1>

<table>
  <tr>
    <th>Batch No.</th>
    <th>Total count</th>
    <th>Completed count</th>
    <th></th>
  </tr>

<% @batches.each do |batch| %>
  <tr>
    <td><%= batch.id %></td>
    <td><%= batch.total_cnt %></td>
    <td><%= batch.completed_cnt %></td>
    <td><%= link_to 'Show', batch %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Batch', new_batch_path %>
